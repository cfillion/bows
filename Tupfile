export GEM_HOME

# source files
: foreach src/*.coffee |> coffee -bp %f > %o |> build/%B.js
: build/*.js |> browserify build/main.js -s bows \
  | uglifyjs -mo %o |> dist/bows.js

# stylesheets
: style/*.sass |> sass -C --sourcemap=none -t compressed style/main.sass \
  | autoprefixer -o %o |> dist/bows.css
